@model UsuarioAdmModel


@{
    ViewData["Title"] = "Deletar Usuario";

}



<link rel="stylesheet" href="/css/site.css" />

<body>
    <div class="container col-11 col-md-9" id="form-container">
        <div class="row align-items-center gx-5">
            <div class="col-md-6 order-md-2">

                <div class="text-center">
                    <h2>Deseja realmente deletar o Usuario (@Model.Nome)?</h2>
                </div>


                <div class="text-center">
                    <a class="btn btn-primary" asp-controller="UsuarioAdm" asp-action="Index" role="button">Cancelar Exclusão</a>
                    <a class="btn btn-danger" asp-controller="UsuarioAdm" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Confirmar Exclusao</a> 
                </div>


            </div>

            <div class="col-md-6 order-md-1">
                <div class="col-12">
                    <img src="/lib/trash.svg" alt="Deletar " class="img-fluid">
                </div>

            </div>
        </div>

    </div>

</body>