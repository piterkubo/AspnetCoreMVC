@model RedefinirSenhaModel


@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";
}


@if (TempData["MensagemErro"] != null)


{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}



<!-- css -->
<link rel="stylesheet" href="/css/style.css">

<body>
    <div class="container col-11 col-md-9" id="form-container">
        <div class="row align-items-center gx-5">
            <div class="col-md-6 order-md-2">
                <h2>Redefinir a Senha</h2>
                <form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">
                    
                    <div class="form-floating mb-3">                        
                        <input asp-for="Login" type="text" class="form-control" id="cpf_cnpj" required
                               placeholder="Digite o seu CPF ou CNPJ" onkeypress='mascaraMutuario(this,cpfCnpj)' maxlength="18">
                        <label for="login" class="form-label">Login</label>
                        @Html.ValidationMessageFor(x => x.Login)
                    </div>


                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="text" class="form-control" id="email" placeholder="Digite o E-mail">
                        <label for="email" class="form-label">Email</label>
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>


                    
                    <button type="submit" class="btn btn-primary">Redefinir Senha</button>
                    <a type="button" class="btn btn-secondary" asp-controller="Login" asp-action="Index">Voltar</a>
                   
                    
                </form>
            </div>

            <div class="col-md-6 order-md-1">
                <div class="col-12">
                    <img src="/lib/forgot_password.svg" alt="Logar no sistema " class="img-fluid">
                </div>

            </div>

        </div>

    </div>

</body>